# Telegram Bot Token (получите у @BotFather)
BOT_TOKEN=your_bot_token_here

# Интервал проверки цены в секундах (по умолчанию 60)
CHECK_INTERVAL=60

# Порог для уведомлений о изменении цены в процентах (по умолчанию 5%)
ALERT_THRESHOLD=5.0

# Порог для арбитражных уведомлений в процентах (по умолчанию 2%)
ARB_THRESHOLD=2.0

# Путь к базе данных
DATABASE_PATH=data/holder_bot.db

# Mini App настройки
MINIAPP_PORT=8000
MINIAPP_HOST=0.0.0.0

# CORS настройки (разрешенные origins через запятую)
# Пример: https://frontend-xi-umber-55.vercel.app,https://example.com
ALLOWED_ORIGINS=https://frontend-xi-umber-55.vercel.app

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API URLs (обычно менять не нужно)
DEX_API_URL=https://api.ston.fi
CEX_API_URL=https://api.origami.tech/api/market/public/ticker?symbol_id=36380
